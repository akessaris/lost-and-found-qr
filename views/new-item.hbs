

<div class="form-group row">
  <div class="col-sm-7">
    <h2>Register a New Item</h2>
  </div>
</div>

<form method="POST" action="/new-item">
  <div class="form-group row">
    <label for="inputName3" class="col-md-2 col-form-label">Name</label>
    <div class="col-sm-3">
      <input type="text" class="form-control" id="inputName3" name="name" placeholder="Name">
    </div>
  </div>

  <div class="form-group row">
    <label for="inputDescription3" class="col-md-2 col-form-label">Description</label>
    <div class="col-sm-3">
      <input type="text" class="form-control" id="inputDescription3" name="desc" placeholder="Description (Optional)">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-7">
      <input class="btn btn-success" type="submit" value="Register Item">
    </div>
  </div>

</form>
